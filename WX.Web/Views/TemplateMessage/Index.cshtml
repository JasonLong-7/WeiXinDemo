
@{
    ViewBag.Title = "发送模板消息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>发送模板消息</h2>

<div class="row">
    @using (Html.BeginForm("SendTemplateMessage", "TemplateMessage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.TextArea("jsonTPMessage", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="提 交" />
        </div>
    }
</div>